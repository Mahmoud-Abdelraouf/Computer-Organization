module FullAdder_4bit (
    input [3:0] A, input [3:0] B, input [3:0] Cin,
    output [3:0] Sum, output Cout
);
    integer i;

    reg [3:0] SumReg;
    reg CoutReg;

    always @(*) begin
        CoutReg = 1'b0; // Initialize CoutReg to 0
        for (i = 0; i < 4; i = i + 1) begin
            FullAdder F1( .A(A[i]), .B(B[i]), .Cin(Cin[i]), .Sum(SumReg[i]), .Cout(CoutReg));
        end
    end

    assign Sum = SumReg;
    assign Cout = CoutReg;

endmodule // FullAdder_4bit
